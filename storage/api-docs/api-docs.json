{
    "openapi": "3.0.0",
    "info": {
        "title": "Nova Kudos",
        "description": "Demo Nova Kudos Api",
        "version": "1.0"
    },
    "paths": {
        "/api/v1/login-register": {
            "post": {
                "tags": [
                    "login register"
                ],
                "summary": "login register",
                "description": "login register",
                "operationId": "login and register",
                "parameters": [
                    {
                        "name": "Accept",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "application/json"
                    },
                    {
                        "name": "Content-Type",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "application/json"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "required": [
                                    "mobile"
                                ],
                                "properties": {
                                    "mobile": {
                                        "type": "text",
                                        "format": "text",
                                        "example": "09124068701"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "401": {
                        "description": "validation error"
                    },
                    "422": {
                        "description": "error"
                    },
                    "500": {
                        "description": "server error"
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        },
        "/api/v1/check-otp": {
            "post": {
                "tags": [
                    "check otp"
                ],
                "summary": "check otp",
                "description": "check otp",
                "operationId": "check otp",
                "parameters": [
                    {
                        "name": "Accept",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "application/json"
                    },
                    {
                        "name": "Content-Type",
                        "in": "header",
                        "required": true,
                        "schema": {
                            "type": "string"
                        },
                        "example": "application/json"
                    }
                ],
                "requestBody": {
                    "required": true,
                    "content": {
                        "multipart/form-data": {
                            "schema": {
                                "properties": {
                                    "mobile": {
                                        "type": "text",
                                        "format": "text",
                                        "example": "09354069701"
                                    },
                                    "otp": {
                                        "type": "text",
                                        "format": "text",
                                        "example": "878787"
                                    }
                                },
                                "type": "object"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "success"
                    },
                    "401": {
                        "description": "validation error"
                    },
                    "422": {
                        "description": "error"
                    },
                    "500": {
                        "description": "server error"
                    }
                },
                "security": [
                    {
                        "apiAuth": []
                    }
                ]
            }
        }
    }
}